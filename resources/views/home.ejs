<section class="hero py-2 px-6">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
            <button class="px-8 py-4 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button>
        </div>
        <div class="w-5/6">
            <img src="https://thebelgianwaffle.co/wp-content/uploads/2019/12/6.jpg" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8 px-6">
    <h1 class="text-xl font-bold mb-8">All Waffles</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
        <!-- ejs template being used with for each loop to repeat the data -->
        <!-- waffles is an array -->
        <% waffles.forEach(function(waffle) { %>  
        <div class="w-full md:w-64">
            <img class="h-40 mb-4 mx-auto" src="/img/<%= waffle.image %>" alt="">
            <div class="text-center">
                <h2 class="mb-4 text-lg"><%= waffle.name %></h2>
                <!-- <span class="size py-1 px-4 rounded-full uppercase text-xs "><%= waffle.type %></span> -->
                <div class="flex items-center justify-around mt-6">
                    <span class="font-bold text-lg">â‚¹<%= waffle.price %></span>
                    <button data-waffle="<%= JSON.stringify(waffle) %>"
                        class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                        <span>+</span>
                        <span class="ml-4">Add</span>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</section>